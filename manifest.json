{
  "name": "Privacy Extension for Twitter",
  "version": "3.3.2",
  "description": "Privacy Extension for Twitter, blur your timeline.",
  "manifest_version": 3,
  "author": "PedroPing",
  "action": {
    "default_popup": "content/index.html",
    "default_title": "Privacy Extension for Twitter",
    "default_icon": {
      "16": "assets/privacy-extension-for-twitter-black.png",
      "24": "assets/privacy-extension-for-twitter-black.png",
      "32": "assets/privacy-extension-for-twitter-black.png"
    }
  },
  "icons": {
    "16": "assets/privacy-extension-for-twitter-black.png",
    "32": "assets/privacy-extension-for-twitter-black.png",
    "48": "assets/privacy-extension-for-twitter-black.png",
    "128": "assets/privacy-extension-for-twitter-black.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": [
        "scripts/home-blur.js",
        "scripts/post-blur.js",
        "scripts/photo-blur.js",
        "scripts/trendingBlur.js",
        "contentScript.js"
      ],
      "css": ["styles/home-blur.css"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "externally_connectable": {
    "matches": ["https://twitter.com/*", "https://x.com/*"]
  }
}
